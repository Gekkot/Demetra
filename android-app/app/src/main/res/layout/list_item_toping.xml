<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="50mm"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/topping_name"
        android:layout_width="25mm"
        android:layout_height="match_parent"
        android:text="Name"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/topping_price"
        android:layout_width="5mm"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:text="Price"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/minus_count"/>


    <ImageView
        android:id="@+id/minus_count"
        android:layout_width="7mm"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_minus_position_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/count"/>

    <TextView
        android:id="@+id/count"
        android:gravity="center"
        android:layout_width="6mm"
        android:layout_height="match_parent"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/plus_count"/>

    <ImageView
        android:id="@+id/plus_count"
        android:layout_width="7mm"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_plus_position_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/divider"
        android:layout_width="314dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="201dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>